<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingStart="8dp"
  android:paddingEnd="8dp">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="@dimen/item_padding_horizontal"
      android:paddingTop="@dimen/item_padding_vertical"
      android:paddingEnd="@dimen/item_padding_horizontal"
      android:paddingBottom="@dimen/item_padding_vertical">

      <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
          android:id="@+id/start_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp" />

        <TextView
          android:id="@+id/time_duration"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="|"
          android:textSize="14sp" />

        <TextView
          android:id="@+id/end_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:textSize="14sp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/header"
        android:orientation="vertical">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <LinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/footer"
            android:orientation="vertical">

            <TextView
              android:id="@+id/activity_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:maxLines="1"
              android:textColor="@color/colorPrimary"
              android:textSize="16sp" />

            <TextView
              android:id="@+id/activity_note"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:ellipsize="end"
              android:maxLines="1"
              android:textSize="14sp" />

          </LinearLayout>

          <LinearLayout
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
              android:id="@+id/activity_category_group"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="textEnd"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/activity_category"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:textAlignment="viewEnd"
              android:textSize="14sp" />

          </LinearLayout>

        </RelativeLayout>

        <LinearLayout
          android:id="@+id/activity_task_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/activity_task_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_task" />

          <TextView
            android:id="@+id/activity_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1" />

        </LinearLayout>


      </LinearLayout>

    </RelativeLayout>

  </androidx.cardview.widget.CardView>
</LinearLayout>